{
  "identifier": "main-capabilities",
  "windows": [
    "main"
  ],
  "platforms": [
    "windows",
    "macOS"
  ],
  "permissions": [
    "core:default",
    "fs:read-files",
    "fs:write-files",
    "fs:allow-mkdir",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        "$DATA/**"
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**/*"
        }
      ]
    },
    "http:allow-fetch",
    "dialog:allow-message",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "cloudflared",
          "cmd": "$APPDATA/cloudflared.mineflared.exe",
          "args": [
            "access",
            "tcp",
            "--hostname",
            {
              "validator": ".+"
            },
            "--url",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/c",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    "shell:allow-kill",
    "core:window:allow-destroy"
  ]
}