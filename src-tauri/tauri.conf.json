{
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "",
        "devPath": "../src",
        "distDir": "../src",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "mineflared",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": true,
                "execute": true,
                "sidecar": true,
                "open": true
            },
            "dialog": {
                "all": false,
                "message": true
            },
            "path": {
                "all": true
            },
            "os": {
                "all": true
            },
            "fs": {
                "all": true,
                "scope": ["*/**"]
            },
            "http": {
                "all": true,
                "scope": ["https://**/*"]
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.mimja156.mineflared",
            "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": false,
                "title": "mineflared",
                "width": 350,
                "height": 400
            }
        ]
    }
}
